      <Button layoutX="232.0" layoutY="481.0" mnemonicParsing="false" onAction="#onActionSaveButtonPressed" text="Save" />
      <GridPane layoutX="54.0" layoutY="105.0" prefHeight="352.0" prefWidth="299.0">
